{
    // ---- Python 語言伺服器設定 ----
    "python.languageServer": "Pylance", // 使用 Pylance 作為 VS Code 的 Python 語言伺服器，提供 IntelliSense、型別檢查。
    "python.analysis.typeCheckingMode": "basic",  // 啟用基本型別檢查（比 strict 寬鬆，不會報太多錯誤）。
    //"python.analysis.diagnosticSeverityOverrides": {
    //    "reportMissingModuleSource": "none" // 規避錯誤提示：忽略「找不到模組原始碼」的警告（對 micropython/circuitpython 很有用）。
    //},
    
    "python.terminal.activateEnvironment": false, // 執行 Python 程式時，不自動啟動虛擬環境（避免每次開啟終端機跑 activate）。
    
    // ---- 指向 stubs（相對路徑）----
    //"python.analysis.typeshedPaths": [
    //    "./circuitpython_stubs-9.2.8"
    //], //型別提示
    
    "python.analysis.extraPaths": [
        "./stubs/circuitpython_stubs-9.2.8",
        "./stubs/adafruit-circuitpython-bundle-py/lib"
    ],
    "python.analysis.autoSearchPaths": true, //自動搜尋子資料夾
    //"python.autoComplete.extraPaths": [
        //"./circuitpython_stubs-9.2.8",
    //],

    // ---- 檔案自動同步設定 ----
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.py$", 
                // 匹配所有 .py 檔案，當存檔時觸發。

                "cmd": "powershell -ExecutionPolicy Bypass -File \"${workspaceFolder}\\tools\\sync.ps1\""
                // 存檔後執行這段 PowerShell 腳本，用來同步你的 Python 檔案到 CIRCUITPY。
                // 注意：ExecutionPolicy Bypass 是允許 PowerShell 腳本執行，不受系統限制。
            }
        ]
    }

     
}
